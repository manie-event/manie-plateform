{"file":"_token_-CK0no8vq.js","mappings":";;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;AAiBA,UAAM,QAAQ,SAAS;AACR,cAAU;AACX,UAAM,OAAO;AACJ,wBAAoB;AAErC,UAAA,UAAU,IAAI,IAAI;AAClB,UAAA,UAAU,IAAI,KAAK;AACnB,UAAA,QAAQ,IAAI,EAAE;;;;;;;;;;;;;;;;;;;;","names":[],"sources":["../../../../pages/verify-email/[token].vue"],"sourcesContent":["<template>\n  <div class=\"p-8 text-center\">\n    <h1 class=\"text-2xl font-bold mb-4\">Vérification de l'email</h1>\n\n    <div v-if=\"loading\">⏳ Vérification en cours...</div>\n\n    <div v-else-if=\"success\" class=\"text-green-600\">✅ Email vérifié avec succès !</div>\n\n    <div v-else class=\"text-red-600\">\n      ❌ Erreur de vérification : {{ error || 'Lien invalide ou expiré.' }}\n    </div>\n  </div>\n</template>\n<script setup lang=\"ts\">\nimport { onMounted, ref } from 'vue';\nimport { useRoute, useRouter } from 'vue-router';\n\nconst route = useRoute();\nconst router = useRouter();\nconst token = route.params.token as string;\nconst { checkEmail } = useAuthentification();\n\nconst loading = ref(true);\nconst success = ref(false);\nconst error = ref('');\n\nonMounted(async () => {\n  try {\n    const result = await checkEmail(token);\n    console.log(result, 'result');\n\n    if (result?.success) {\n      success.value = true;\n      setTimeout(() => router.push('/login'), 3000);\n    } else {\n      throw new Error(result?.message || 'Erreur inconnue');\n    }\n  } catch (err: any) {\n    error.value = err?.response?.data?.message || err?.message;\n  } finally {\n    loading.value = false;\n  }\n});\n</script>\n"],"version":3}