{"file":"ProductItemOne-DBRBLEM8.js","mappings":";;;;;;;;;;;;;;;;;AAGA,UAAM,QAAQ;AAUR,UAAA,kBAAkB,IAAI,KAAK;AACpB,QAAI,MAAM,MAAM;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;","names":[],"sources":["../../../../components/apps/ecommerce/listing/ProductItemOne.vue"],"sourcesContent":["<script setup lang=\"ts\">\nimport { ref } from 'vue';\nimport type { HeartIcon } from 'vue-tabler-icons';\nconst props = defineProps({\n  name: String,\n  image: String,\n  desc: String,\n  rating: Number,\n  salePrice: Number,\n  rank: Number,\n  offerPrice: Number,\n  goto: Number || String || Object || Array,\n});\nconst successsnackbar = ref(false);\nconst rate = ref(props.rating);\n</script>\n\n<template>\n  <v-card variant=\"flat\" class=\"rounded-md card-hover overflow-hidden bg-surface\">\n    <router-link :to=\"`/apps/ecommerce/product/one/detail/${goto}`\">\n      <img alt=\"product\" :src=\"image\" class=\"w-100 rounded-md\" />\n    </router-link>\n    <div class=\"d-flex justify-end mr-3 mt-n6 position-absolute action-btn\">\n      <v-btn icon v-bind=\"props\" color=\"white\" size=\"small\" class=\"mr-3\"\n        ><HeartIcon size=\"19\" stroke-width=\"1.5\"\n      /></v-btn>\n      <v-tooltip text=\"Add to Cart\" location=\"bottom\">\n        <template v-slot:activator=\"{ props }\">\n          <v-btn\n            icon\n            v-bind=\"props\"\n            color=\"white\"\n            size=\"small\"\n            @click=\"$emit('handlecart', (successsnackbar = true))\"\n            ><BasketIcon size=\"19\" stroke-width=\"1.5\"\n          /></v-btn>\n        </template>\n      </v-tooltip>\n    </div>\n    <v-card-item class=\"pt-3 text-left\">\n      <h6 class=\"text-h6 font-weight-semibold\">{{ name }}</h6>\n      <div class=\"d-flex align-center justify-start mt-2\">\n        <v-icon icon=\"mdi-star\" color=\"warning\" size=\"18\" class=\"mr-1\"></v-icon\n        ><span class=\"font-weight-semibold text-grey200 text-subtitle-1\">{{\n          rating?.toFixed(1)\n        }}</span>\n        <span class=\"font-weight-medium text-grey100 text-subtitle-1 ml-1\">({{ rank }})</span>\n      </div>\n      <div class=\"d-flex align-center justify-start gap-2 mt-2\">\n        <h6 class=\"text-h6 font-weight-semibold\">${{ salePrice }}</h6>\n        <p class=\"text-h6 text-decoration-line-through font-weight-semibold text-grey100\">\n          ${{ offerPrice }}\n        </p>\n      </div>\n    </v-card-item>\n    <v-snackbar\n      variant=\"flat\"\n      location=\"bottom right\"\n      color=\"success\"\n      rounded=\"md\"\n      class=\"text-white\"\n      v-model=\"successsnackbar\"\n    >\n      Item Added to The Cart\n    </v-snackbar>\n  </v-card>\n</template>\n<style lang=\"scss\" scoped>\n.descriptionH {\n  height: 40px;\n  overflow: hidden;\n}\n.action-btn {\n  top: 40px;\n  right: -100% !important;\n  transition: all 0.3s ease-in-out;\n  visibility: hidden;\n  .v-btn {\n    height: 36px;\n    width: 36px;\n  }\n}\n\n.card-hover {\n  &:hover {\n    .action-btn {\n      right: 0 !important;\n      visibility: visible;\n    }\n  }\n}\n</style>\n"],"version":3}