{"file":"ProductItem-C25Mm-U3.js","mappings":";;;;;;;;;;;;;;;;AAEA,UAAM,QAAQ;AASR,UAAA,kBAAkB,IAAI,KAAK;AAC3B,UAAA,OAAO,IAAI,MAAM,MAAM;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;","names":[],"sources":["../../../../components/apps/ecommerce/listing/ProductItem.vue"],"sourcesContent":["<script setup lang=\"ts\">\nimport { ref } from 'vue';\nconst props = defineProps({\n  name: String,\n  image: String,\n  desc: String,\n  rating: Number,\n  salePrice: Number,\n  offerPrice: Number,\n  goto: Number || String || Object || Array,\n});\nconst successsnackbar = ref(false);\nconst rate = ref(props.rating);\n</script>\n\n<template>\n  <v-card elevation=\"10\" class=\"rounded card-hover overflow-hidden bg-surface\">\n    <router-link :to=\"`/apps/ecommerce/producttwo/two/detail/${goto}`\">\n      <img alt=\"product\" :src=\"image\" class=\"w-100\" />\n    </router-link>\n    <div class=\"d-flex justify-end mr-3 mt-n6\">\n      <v-tooltip text=\"Add to Cart\" location=\"bottom\">\n        <template v-slot:activator=\"{ props }\">\n          <v-btn\n            icon\n            v-bind=\"props\"\n            color=\"primary\"\n            class=\"ml-auto\"\n            size=\"x-small\"\n            @click=\"$emit('handlecart', (successsnackbar = true))\"\n            ><BasketIcon size=\"18\"\n          /></v-btn>\n        </template>\n      </v-tooltip>\n    </div>\n    <v-card-item class=\"pt-1\">\n      <h6 class=\"text-h6\">{{ name }}</h6>\n\n      <div class=\"d-flex align-center justify-space-between mt-1\">\n        <div class=\"d-flex align-center gap-2\">\n          <h6 class=\"text-h6\">${{ salePrice }}</h6>\n          <p class=\"text-decoration-line-through text-medium-emphasis\">${{ offerPrice }}</p>\n        </div>\n        <ClientOnly\n          ><v-rating color=\"warning\" half-increments size=\"small\" v-model=\"rate\" density=\"compact\">\n          </v-rating\n        ></ClientOnly>\n      </div>\n    </v-card-item>\n    <v-snackbar\n      variant=\"flat\"\n      location=\"bottom right\"\n      color=\"success\"\n      rounded=\"md\"\n      class=\"text-white\"\n      v-model=\"successsnackbar\"\n    >\n      Item Added to The Cart\n    </v-snackbar>\n  </v-card>\n</template>\n<style>\n.descriptionH {\n  height: 40px;\n  overflow: hidden;\n}\n</style>\n"],"version":3}